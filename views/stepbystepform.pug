<!DOCTYPE html>
<html>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

style
    include ../form-SHOW_HIDE/style.css

<body>
    <div>
        <div id="multi-step-form-container">
            <!-- Form Steps / Progress Bar -->
            <ul class="form-stepper form-stepper-horizontal text-center mx-auto pl-0">
                <!-- Step 1 -->
                <li class="form-stepper-active text-center form-stepper-list" step="1">
                    <a class="mx-1">
                        <span class="form-stepper-circle">
                            <span>1</span>
                        </span>
                        <div class="label">Account Basic Details</div>
                    </a>
                </li>
                <!-- Step 2 -->
                <li class="form-stepper-unfinished text-center form-stepper-list" step="2">
                    <a class="mx-1">
                        <span class="form-stepper-circle text-muted">
                            <span>2</span>
                        </span>
                        <div class="label text-muted">Contact Details</div>
                    </a>
                </li>
                <!-- Step 3 -->
                <li class="form-stepper-unfinished text-center form-stepper-list" step="3">
                    <a class="mx-1">
                        <span class="form-stepper-circle text-muted">
                            <span>3</span>
                        </span>
                        <div class="label text-muted">Interest Details</div>
                    </a>
                </li>
                <!-- Step 4 -->
                <li class="form-stepper-unfinished text-center form-stepper-list" step="4">
                    <a class="mx-4">
                        <span class="form-stepper-circle text-muted">
                            <span>4</span>
                        </span>
                        <div class="label text-muted">Address Details</div>
                    </a>
                </li>
                <!-- Step 5 -->
                <li class="form-stepper-unfinished text-center form-stepper-list" step="5">
                    <a class="mx-4">
                        <span class="form-stepper-circle text-muted">
                            <span>5</span>
                        </span>
                        <div class="label text-muted">University Details</div>
                    </a>
                </li>
                <!-- Step 6 -->
                <li class="form-stepper-unfinished text-center form-stepper-list" step="6">
                    <a class="mx-4">
                        <span class="form-stepper-circle text-muted">
                            <span>6</span>
                        </span>
                        <div class="label text-muted">Grip in which Technology</div>
                    </a>
                </li>
            </ul>
            <!-- Step Wise Form Content -->
            <form id="userAccountSetupForm" class="form" style="text-align: center" name="userAccountSetupForm" enctype="multipart/form-data">
                <!-- Step 1 Content -->
                <section id="step-1" class="form-step">
                    <h2 class="font-normal">Account Basic Details</h2>
                    <!-- Step 1 input fields -->
                    <div class="mt-3">
                        <div class="tab">
                            <p>First Name: <input placeholder="First name..." oninput="this.className = ''"></p>
                            <p>Last Name: <input placeholder="Last name..." oninput="this.className = ''"></p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-info btn-lg  btn-navigate-form-step" type="button" step_number="2">Next</button>
                    </div>
                </section>
                <!-- Step 2 Content, default hidden on page load. -->
                <section id="step-2" class="form-step d-none">
                    <h2 class="font-normal">Contact Details</h2>
                    <!-- Step 2 input fields -->
                    <div class="mt-3">
                        <div class="tab">
                            <p class="col-md-12">Email: <input placeholder="E-mail..." oninput="this.className = ''">
                            </p>
                            <p class="col-md-12">Number: <input placeholder="Phone..." oninput="this.className = ''">
                            </p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-info  btn-lg   btn-navigate-form-step" type="button" step_number="3">Next</button>
                        <button class="btn btn-danger  btn-lg  btn-navigate-form-step" type="button"step_number="1">Prev</button>
                    </div>
                </section>
                <!-- Step 3 Content, default hidden on page load. -->
                <section id="step-3" class="form-step d-none">
                    <h2 class="font-normal">Interest</h2>
                    <!-- Step 3 input fields -->
                    <div class="mt-3">
                        <div class="tab">
                            <p class="col-md-12">Hobbies: <input placeholder=" " oninput="this.className = ''"></p>
                            <p class="col-md-12">Distinctions: <input placeholder=" " oninput="this.className = ''"></p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-info  btn-lg   btn-navigate-form-step" type="button" step_number="4">Next</button>
                        <button class="btn btn-danger  btn-lg  btn-navigate-form-step" type="button"step_number="2">Prev</button>
                    </div>
                </section>
                <!-- Step 4 Content, default hidden on page load. -->
                <section id="step-4" class="form-step d-none">
                    <h2 class="font-normal">Address Details</h2>
                    <!-- Step 4 input fields -->
                    <div class="mt-3">
                        <div class="tab">
                            <p class="col-md-12">City: <input placeholder="City name" oninput="this.className = ''"></p>
                            <p class="col-md-12">Disctrict: <input placeholder="Disctrict." oninput="this.className = ''"></p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-info  btn-lg   btn-navigate-form-step" type="button" step_number="5">Next</button>
                        <button class="btn btn-danger  btn-lg  btn-navigate-form-step" type="button" step_number="3">Prev</button>
                    </div>
                </section>
                <!-- Step 5 Content, default hidden on page load. -->
                <section id="step-5" class="form-step d-none">
                    <h2 class="font-normal">University</h2>
                    <!-- Step 5 input fields -->
                    <div class="mt-3">
                        <div class="tab">
                            <p class="col-md-12">University: <input placeholder="Uni name and City" oninput="this.className = ''"></p>
                            <p class="col-md-12">GPA: <input placeholder="CGPA till now" oninput="this.className = ''"></p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-info  btn-lg   btn-navigate-form-step" type="button"step_number="6">Next</button>
                        <button class="btn btn-danger  btn-lg  btn-navigate-form-step" type="button"step_number="4">Prev</button>
                    </div>
                </section>
                <!-- Step 6 Content, default hidden on page load. -->
                <section id="step-6" class="form-step d-none">
                    <h2 class="font-normal">Work Details</h2>
                    <!-- Step 6 input fields -->
                    <div class="mt-3">
                        <div class="tab">
                            <p>Languages: <input type="text" placeholder="" oninput="this.className = ''"></p>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-success btn-lg submit-btn" type="submit">Save</button>
                        <button class="btn btn-danger btn-lg btn-navigate-form-step" type="button"step_number="5">Prev</button>
                    </div>
                </section>
            </form>
        </div>
    </div>

script
    include ../form-SHOW_HIDE/scr.js

</body>

</html>